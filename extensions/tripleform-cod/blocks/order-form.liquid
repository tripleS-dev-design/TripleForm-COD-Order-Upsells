      "text": "#0F172A",
      "border": "#E5E7EB",
      "radius": 12,
      "padding": 16,
      "inputBg": "#FFFFFF",
      "inputBorder": "#E5E7EB",
      "placeholder": "#94A3B8",
      "btnBg": "#111827",
      "btnText": "#FFFFFF",
      "btnBorder": "#111827",
      "btnHeight": 46,
      "btnRadius": 10,
      "shadow": true,
      "glow": false,
      "glowPx": 18,
      "cartBg": "#FFFFFF",
      "cartBorder": "#E5E7EB",
      "cartRowBg": "#FFFFFF",
      "cartRowBorder": "#E5E7EB",
      "cartTitleColor": "#0F172A",
      "cartTextColor": "#0F172A",

      "direction": "ltr",
      "fontSize": 14,
      "titleAlign": "left",
      "fieldAlign": "left"
    },
    "behavior": {
      "requireGDPR": false,
      "gdprLabel": "I accept the privacy policy",
      "whatsappOptIn": false,
      "whatsappLabel": "Receive confirmation on WhatsApp",
      "openDelayMs": 0,
      "closeOnOutside": true,
      "effect": "none",
      "glowPx": 18,
      "stickyType": "none",
      "stickyLabel": "Order now",
      "drawerDirection": "right",
      "drawerSize": "md",
      "overlayColor": "#020617",
      "overlayOpacity": 70,

      "country": "DZ",
      "codCountry": "DZ",
      "provinceKey": "",
      "cityKey": ""
    },
    "fields": {
      "name": {
        "on": true,
        "required": true,
        "type": "text",
        "label": "Full name",
        "ph": "Your full name"
      },
      "phone": {
        "on": true,
        "required": true,
        "type": "tel",
        "label": "Phone (WhatsApp)",
